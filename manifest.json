{
  "manifest_version": 3,
  "name": "AI JSON Formatter For Chrome",
  "version": "1.0.0",
  "description": "Encode, Decode, Format & Minify JSON easily with AI JSON Formatter.",
  "author": "Kamod Kumar",
  "homepage_url": "https://kamod7619.github.io/ai_json_formatter_chrome_extension/",
  
  "action": {
    "default_popup": "index.html",
    "default_title": "AI JSON Formatter For Chrome",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png",
    "512": "icons/icon512.png"
  },

  "permissions": [],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
